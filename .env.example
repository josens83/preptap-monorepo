# ==========================================
# Database Configuration
# ==========================================
# For development, use SQLite (recommended)
DATABASE_URL="file:./dev.db"

# For production, use PostgreSQL (uncomment below)
# DATABASE_URL="postgresql://user:password@localhost:5432/preptap_db?schema=public"

# ==========================================
# Prisma Configuration
# ==========================================
# For offline/restricted environments (development only)
PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1

# ==========================================
# NextAuth Configuration
# ==========================================
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
NEXT_PUBLIC_STRIPE_PRICE_ID_MONTHLY="price_..."
NEXT_PUBLIC_STRIPE_PRICE_ID_YEARLY="price_..."

# PortOne (Optional)
IAMPORT_API_KEY=""
IAMPORT_API_SECRET=""

# App URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Email (Optional - for magic links)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@preptap.com"

# Analytics (Optional)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# OpenTelemetry (Optional)
OTEL_EXPORTER_OTLP_ENDPOINT=""

# Feature Flags
NEXT_PUBLIC_ENABLE_AUDIO="true"
NEXT_PUBLIC_ENABLE_STUDY_GROUPS="true"
