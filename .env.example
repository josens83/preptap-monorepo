# ==========================================
# Database Configuration
# ==========================================
# For development, use SQLite (recommended)
DATABASE_URL="file:./dev.db"

# For production, use PostgreSQL (uncomment below)
# DATABASE_URL="postgresql://user:password@localhost:5432/preptap_db?schema=public"

# ==========================================
# Prisma Configuration
# ==========================================
# For offline/restricted environments (development only)
PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1

# ==========================================
# NextAuth Configuration
# ==========================================
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars"

# Google OAuth (Optional - for social login)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ==========================================
# Stripe Payment Configuration
# ==========================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
# 4-Tier Subscription Plan Price IDs
NEXT_PUBLIC_STRIPE_BASIC_PRICE_ID="price_basic_..."
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID="price_pro_..."
NEXT_PUBLIC_STRIPE_PREMIUM_PRICE_ID="price_premium_..."

# PortOne (Optional)
IAMPORT_API_KEY=""
IAMPORT_API_SECRET=""

# App URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Email (Optional - for magic links)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@preptap.com"

# Analytics (Optional)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# OpenTelemetry (Optional)
OTEL_EXPORTER_OTLP_ENDPOINT=""

# Feature Flags
NEXT_PUBLIC_ENABLE_AUDIO="true"
NEXT_PUBLIC_ENABLE_STUDY_GROUPS="true"

# ==========================================
# Performance & Monitoring
# ==========================================
# Google Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=""

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# Sentry (optional - error tracking)
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ==========================================
# Security & Rate Limiting
# ==========================================
# Rate limiting is enabled by default with in-memory storage
# For production with multiple servers, consider using Redis

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Session secret (auto-generated from NEXTAUTH_SECRET)
# Additional security settings
ENABLE_RATE_LIMITING="true"
RATE_LIMIT_STRICT_MODE="false"
