SENTRY_AUTH_TOKEN="..."

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-..."

# ===== Redis (optional, for rate limiting & caching) =====
REDIS_URL="redis://localhost:6379"

# ===== Feature Flags =====
NODE_ENV="development" # development | production | test
ENABLE_ANALYTICS="false"
ENABLE_SENTRY="false"

