{
  "name": "preptap-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "db:generate": "cd packages/db && pnpm prisma generate",
    "db:push": "cd packages/db && pnpm prisma db push",
    "db:migrate": "cd packages/db && pnpm db:migrate",
    "db:seed": "cd packages/db && pnpm db:seed",
    "db:studio": "cd packages/db && pnpm db:studio",
    "db:reset": "cd packages/db && pnpm db:reset",
    "db:setup": "pnpm db:generate && pnpm db:push && pnpm db:seed",
    "setup": "pnpm install && pnpm db:setup",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.2",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
