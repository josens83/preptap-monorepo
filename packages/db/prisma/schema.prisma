// Prisma schema for PrepTap English Learning Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ===== User & Auth =====

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?  // null for OAuth-only users
  role      UserRole @default(STUDENT)
  locale    String   @default("ko-KR")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profile         Profile?
  accounts        Account[]
  sessions        Session[]
  subscriptions   Subscription[]
  enrollments     Enrollment[]
  practiceSessions PracticeSession[]
  weaknesses      Weakness[]
  spacedItems     SpacedItem[]
  ownedGroups     StudyGroup[]      @relation("GroupOwner")
  groupMemberships GroupMember[]
  payments        Payment[]
  eventLogs       EventLog[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ===== User Profile =====

enum SchoolLevel {
  ELEMENTARY
  MIDDLE
  HIGH
  UNIVERSITY
  ADULT
}

enum ExamType {
  SUNEUNG    // 수능
  TEPS
  TOEIC
  TOEFL
  IELTS
  CUSTOM
}

model Profile {
  id          String       @id @default(cuid())
  userId      String       @unique
  displayName String?
  schoolLevel SchoolLevel?
  targetExam  ExamType?
  targetScore Int?
  examDate    DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ===== Subscription & Payment =====

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
  INCOMPLETE
}

enum PaymentProvider {
  STRIPE
  IAMPORT
}

model Subscription {
  id                     String             @id @default(cuid())
  userId                 String
  provider               PaymentProvider
  providerId             String // Stripe subscription ID
  stripeCustomerId       String? // Stripe customer ID
  stripeSubscriptionId   String? // Stripe subscription ID
  status                 SubscriptionStatus
  plan                   String? // FREE, BASIC, PRO, PREMIUM
  planName               String? // Alias for compatibility
  priceId                String?
  currentPeriodStart     DateTime?
  currentPeriodEnd       DateTime?
  cancelAtPeriodEnd      Boolean           @default(false)
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}

// ===== Course & Enrollment =====

model Course {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?  
  level       SchoolLevel?
  examType    ExamType?
  price       Int      @default(0) // in cents/won
  isPublished Boolean  @default(false)
  coverImage  String?
  duration    Int?     // estimated days
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  enrollments Enrollment[]

  @@index([examType, isPublished])
  @@index([slug])
}

enum EnrollmentStatus {
  ACTIVE
  COMPLETED
  EXPIRED
}

model Enrollment {
  id        String           @id @default(cuid())
  userId    String
  courseId  String
  status    EnrollmentStatus @default(ACTIVE)
  progress  Int              @default(0) // percentage
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId, status])
}

// ===== Question Bank =====

enum QuestionType {
  MCQ        // Multiple choice
  SHORT      // Short answer
  AUDIO      // Listening
  READING    // Reading comprehension
  FILL_BLANK // Fill in the blank
}

model Question {
  id          String       @id @default(cuid())
  examType    ExamType
  part        String?      // e.g., "Part 5", "RC Section 1"
  type        QuestionType
  stem        String        // Question text
  passage     String?       // Reading passage if applicable
  audioUrl    String?
  imageUrl    String?
  difficulty  Float        @default(0.5) // 0.0 (easy) to 1.0 (hard)
  tags        String[]     // ["grammar", "tense", "past-perfect"]
  metadata    Json?        // Additional structured data
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  choices      Choice[]
  explanation  Explanation?
  sessionItems SessionItem[]
  spacedItems  SpacedItem[]

  @@index([examType, tags])
  @@index([difficulty])
}

model Choice {
  id         String  @id @default(cuid())
  questionId String
  label      String  // A, B, C, D
  text       String  
  isCorrect  Boolean @default(false)

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([questionId])
}

model Explanation {
  id         String  @id @default(cuid())
  questionId String  @unique
  text       String  
  richHtml   String? 
  videoUrl   String?

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

// ===== Practice Session =====

enum SessionMode {
  ADAPTIVE // Adaptive practice
  MOCK     // Mock exam
  CUSTOM   // Custom set
  NOTEBOOK // Wrong answers review
}

model PracticeSession {
  id         String      @id @default(cuid())
  userId     String
  mode       SessionMode
  configJson Json?       // Session configuration
  startedAt  DateTime    @default(now())
  finishedAt DateTime?
  score      Float?      // Final score (percentage)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  user  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items SessionItem[]

  @@index([userId, mode])
  @@index([startedAt])
}

model SessionItem {
  id         String   @id @default(cuid())
  sessionId  String
  questionId String
  orderIndex Int      // Order in session
  elapsedMs  Int?     // Time spent on this question
  userAnswer String?   // User's answer
  isCorrect  Boolean?
  flagged    Boolean  @default(false)
  skipped    Boolean  @default(false)
  createdAt  DateTime @default(now())

  session  PracticeSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  question Question        @relation(fields: [questionId], references: [id])

  @@index([sessionId])
  @@index([questionId])
}

// ===== Weakness & Adaptive Learning =====

model Weakness {
  id          String   @id @default(cuid())
  userId      String
  tag         String   // e.g., "grammar-tense"
  score       Float    @default(0.5) // 0.0 (weak) to 1.0 (strong)
  totalAttempts Int    @default(0)
  correctCount  Int    @default(0)
  lastUpdated DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tag])
  @@index([userId])
}

// ===== Spaced Repetition =====

model SpacedItem {
  id           String   @id @default(cuid())
  userId       String
  questionId   String
  nextReviewAt DateTime
  ef           Float    @default(2.5) // Easiness factor (SM-2)
  interval     Int      @default(1)   // Days
  repetition   Int      @default(0)   // Number of successful reviews
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
  @@index([userId, nextReviewAt])
}

// ===== Study Group =====

model StudyGroup {
  id         String   @id @default(cuid())
  ownerId    String
  name       String
  inviteCode String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  owner   User          @relation("GroupOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members GroupMember[]

  @@index([inviteCode])
}

enum GroupMemberRole {
  OWNER
  ADMIN
  MEMBER
}

model GroupMember {
  id        String          @id @default(cuid())
  groupId   String
  userId    String
  role      GroupMemberRole @default(MEMBER)
  createdAt DateTime        @default(now())

  group StudyGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([userId])
}

// ===== Payment =====

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

model Payment {
  id          String          @id @default(cuid())
  userId      String
  amount      Int             // in cents/won
  currency    String          @default("KRW")
  provider    PaymentProvider
  providerRef String?         // Stripe payment intent ID
  status      PaymentStatus
  metadata    Json?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([providerRef])
}

// ===== Event Log (Analytics) =====

enum EventType {
  USER_SIGNUP
  USER_LOGIN
  SESSION_START
  SESSION_FINISH
  QUESTION_ANSWERED
  SUBSCRIPTION_CREATED
  SUBSCRIPTION_UPDATED
  PAYMENT_SUCCEEDED
  COURSE_ENROLLED
  WEAKNESS_UPDATED
}

model EventLog {
  id          String    @id @default(cuid())
  userId      String?
  eventType   EventType
  payloadJson Json?
  createdAt   DateTime  @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, eventType])
  @@index([createdAt])
}

// ===== Contact & Support =====

enum ContactMessageStatus {
  NEW
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model ContactMessage {
  id        String               @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  status    ContactMessageStatus @default(NEW)
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  @@index([email])
  @@index([status, createdAt])
}
